<Page x:Class="WpfApp.Views.CreateBookPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfApp.Views"
      xmlns:sys="clr-namespace:System;assembly=System.Runtime"
      xmlns:wpfApp="clr-namespace:WpfApp"
      mc:Ignorable="d"
      Title="ItemCreatePage" Height="450" Width="800">
    <Page.Resources>
    </Page.Resources>
    <Grid>
        <ComboBox Width="100" Height="20" ItemsSource="{Binding Path=Genres}" SelectedItem="{Binding Path=SelectedGenre}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"></TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock Height="20" Width="20" Text="{Binding PageName}"></TextBlock> 
    </Grid>
</Page>
